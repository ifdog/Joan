<presentation:ClosableWindow x:Class="Joan.Presentation.NewDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Joan"
        xmlns:presentation="clr-namespace:Joan.Presentation"
        mc:Ignorable="d"
                      
        Title="NewDownloadWindow" Height="200" Width="500">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBox Margin="19,10,19.6,0.4" TextWrapping="Wrap" Text="{Binding LinkText}"/>
        <Button Content="OK" Margin="393,0,20.6,9.4" Grid.Row="1" Height="32" VerticalAlignment="Bottom" Command="{Binding OkCommand}"/>
        <Button Content="Browser" Margin="287,0,114.6,9.4" Grid.Row="1" Height="32" VerticalAlignment="Bottom" Command="{Binding AddFileCommand}"/>

    </Grid>
</presentation:ClosableWindow>

